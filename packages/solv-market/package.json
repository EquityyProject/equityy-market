{
  "name": "@solv/v2-market",
  "version": "1.0.0",
  "description": "Solv voucher market contracts",
  "repository": {
    "type": "git",
    "url": "git@github.com:solv-finance/solv-v2-market.git",
    "directory": "packages/solv-market"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "deploy:localhost": "hardhat deploy --network localhost --reset",
    "test": "hardhat test",
    "test:localhost": "hardhat test --network localhost",
    "init": "hardhat test init/add-currencies.ts && hardhat test init/add-markets.ts",
    "init:localhost": "hardhat test --network localhost init/add-currencies.ts && hardhat test --network localhost init/add-markets.ts",
    "coverage": "yarn build && hardhat coverage --temp artifacts --network coverage"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.0",
    "@openzeppelin/contracts-upgradeable": "^3.4.0",
    "@openzeppelin/hardhat-upgrades": "^1.6.0",
    "@solv/v2-helper": "git+ssh://git@github.com:solv-finance/solv-v2-helper.git",
    "@typechain/ethers-v5": "^6.0.2",
    "@typechain/hardhat": "^1.0.0",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.32",
    "chai": "^4.3.3",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.0",
    "hardhat": "^2.1.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-log-remover": "^2.0.1",
    "hardhat-tracer": "^1.0.0-alpha.3",
    "hardhat-typechain": "^0.3.5",
    "mocha": "^8.3.2",
    "solc": "^0.7.6",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.3",
    "typescript": "^4.2.3"
  }
}